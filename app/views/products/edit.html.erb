<%= render layout: 'products/breadcrumbs' do %>
  <li><%= link_to @product.title, product_path(@product.name, type: @type) %></li>
  <li class="active">Edit</li>
<% end %>

<div class="page-header">
  <h2>
    <%= @product.name %>
  </h2>
</div>

<%= bootstrap_form_for(@product, as: :product, url: product_path(@product.name, type: @type)) do |f| %>
    <%= render "form_git", f: f, product: @product if @product.git_repo? %>
    <%= render "form_manifest", f: f, product: @product %>
    <div class="actions">
      <%= f.submit 'Submit' %>
    </div>
<% end %>

<hr />

<%= link_to 'Back', product_path(@product.name, type: @type), class: 'btn btn-default' %>
