<% if @logout_url || passwd_url %>

<li class="dropdown">
  <a href="#" class="dropdown-toggle" data-toggle="dropdown" role="button"
    aria-haspopup="true" aria-expanded="false">
    <i class="fa fa-user"></i><span class="hidden-xs hidden-sm"> Logged in as <%= @user.name %></span><span class="caret"></span>
  </a>
  <ul class="dropdown-menu">
    <%= nav_link("Change HPC Password", "gear", passwd_url, target: "_blank") %>
    <%= nav_link("Logout", "power-off", @logout_url) %>
  </ul>
</li>

<% else %>
  <p class="navbar-text">
  <i class="fa fa-user" title="Logged in as <%= @user.name %>"></i><span class="hidden-xs hidden-sm"> Logged in as <%= @user.name %></span>
  </p>
<% end %>
