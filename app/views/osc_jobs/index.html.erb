<div class="page-header" xmlns="http://www.w3.org/1999/html">
  <h2>Listing Jobs</h2>
</div>

<div class="col-md-7">
  <div class="panel">

    <a class="btn btn-default btn-sm" href="<%= new_osc_job_path %>" data-toggle="tooltip" title="Create a new job from a template" role="button"><span class="glyphicon glyphicon-plus" aria-hidden="true"></span> New From Template</a>
  </div>
</div>

<div class="col-md-5">
  <!-- placeholder -->
</div>

<div class="row">

  <div class="col-md-7">
    <div id="job-list-view" class="panel panel-default">

        <div class="panel-body">
          <a class="btn btn-default btn-sm" id="open_dir_button" target="_blank" data-toggle="tooltip" title="Open Directory in File Manager" role="button" disabled><span class="glyphicon glyphicon-new-window" aria-hidden="true"></span> Open Dir</a>
          <a class="btn btn-default btn-sm" id="copy_button" data-toggle="tooltip" title="Copy Job" role="button" data-method="get" disabled><span class="glyphicon glyphicon-share-alt" aria-hidden="true"></span></a>
          <!-- <a class="btn btn-default btn-sm" id="view_button" data-toggle="tooltip" title="View Job" role="button" data-method="get" disabled><span class="glyphicon glyphicon-eye-open" aria-hidden="true"></span></a> -->
          <a class="btn btn-default btn-sm" id="edit_button" data-toggle="tooltip" title="Edit Job" role="button" data-method="get" disabled><span class="glyphicon glyphicon-pencil" aria-hidden="true"></span></a>
          <a class="btn btn-success btn-sm" id="submit_button" data-toggle="tooltip" title="Submit Job" role="button" data-method="get" disabled><span class="glyphicon glyphicon-play" aria-hidden="true"></span></a>
          <a class="btn btn-default btn-sm" id="stop_button" data-toggle="tooltip" title="Stop Job" role="button" data-method="get" disabled><span class="glyphicon glyphicon-stop" aria-hidden="true"></span></a>
          <a class="btn btn-default btn-sm" id="template_button" data-toggle="tooltip" title="Set as Template" data-method="get" role="button" disabled><span class="glyphicon glyphicon-star-empty" aria-hidden="true"></span> Set Template</a>
          <a class="btn btn-danger btn-sm" id="destroy_button" data-toggle="tooltip" title="Delete Job" data-method="get" data-confirm="Are you sure?" role="button" disabled><span class="glyphicon glyphicon-trash" aria-hidden="true"></span></a>
        </div>

        <div class="panel-body">
          <table id="job-list-table" class="table data-table" style="width:100%">
            <thead>
            <tr>
              <th>Created</th>
              <th>Name</th>
              <th>PBS ID</th>
              <th>Cluster</th>
              <th>Status</th>
              <!-- FILE_SIZE_FEATURE
              <th>Size</th>
              -->
            </tr>
            </thead>

            <tbody>
            <% @osc_jobs.each do |osc_job| %>
                <tr class="job-row" id="<%=osc_job.id %>">
                  <td data-sort="<%= osc_job.id %>"><small><%= osc_job.created_at.strftime('%F %T') %></small></td>
                  <td><strong><%= osc_job.name %></strong></td>
                  <td><%= osc_job.pbsid %></td>
                  <td><%= osc_job.batch_host.titleize %></td>
                  <td id="status_label_<%= osc_job.id %>"><%= status_label(osc_job) %></td>
                  <!-- FILE_SIZE_FEATURE
                    <td><%# number_to_human_size(Filesystem.new.path_size(osc_job.staged_dir)) %></td>
                    -->
                </tr>
            <% end %>
            </tbody>
          </table>
        </div>

    </div>
  </div>

  <div class="col-md-5">
    <div class="panel panel-default" id="job-details-panel" hidden>
      <div class="panel-body">
        <p>Job Name: <h4><strong><span id="job-details-name"></span></strong></h4></p>
        <p>Submit to:</p>
          <select class="form-control" id="job-details-server-select">
            <% Servers.each do |s| %>
                <option id="<%= s.first %>" value="<%= s.first %>" disabled><%= s.first.titleize %></option>
            <% end %>
          </select>
      </div>

      <div id="job-details-view" class="panel-body">
        <p>Script location:</p>
        <pre id="job-details-staged-dir"></pre>
        <p>Folder Contents:</p>
        <span id="job-details-staged-dir-contents"></span>
      </div>
    </div>

    <div class="panel panel-default" id="script-details-panel">
      <div id="script-text-panel" class="panel-body">
        <p>Submit Script:</p>
        <h4 id="script-name"></h4>
        <p>Script contents:</p>
        <pre id="script-text-data"></pre>
        <p>
          <a class="btn btn-primary btn-sm pull-right" id="open-script-dir-button" target="_blank" data-toggle="tooltip" title="Open Directory in File Manager" role="button"><span class="glyphicon glyphicon-new-window" aria-hidden="true"></span> Open Dir</a>
        </p>
      </div>
    </div>
  </div>
</div>




