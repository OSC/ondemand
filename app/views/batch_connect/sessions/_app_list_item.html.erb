<%= link_to app_path(app.name, app.type, app.owner),
  class: "list-group-item #{'active' if current_app_token == app.token}",
  data: {
    # toggle: "popover",
    content: manifest_markdown(app.manifest.description),
    html: true,
    # trigger: "hover",
    title: app.title,
    container: "body"
} do %>
  <%= app_icon_tag(app) %> <%= app.title %>
<% end %>
