<% sorted_versions = versions.sort_by(&:version).reverse %>
<% available_clusters = versions.map(&:cluster).uniq %>

<%# TODO: Remove inline style %>
<li class="module-card p-2">
  <button class="btn btn-secondary p-2 w-100" type="button" data-bs-toggle="collapse" data-bs-target="#collapse_<%= name %>">
    <%= name.to_s.titleize %>
  </button>

  <div id="collapse_<%= name %>" class="collapse mt-2">
    <div class="p-3 border rounded bg-light">
      <div>
        <strong>Available modules:</strong> 
        <br>
        <%= render 'version_cluster_table', versions: sorted_versions, clusters: available_clusters %>
      </div>
    </div>
  </div>
</li>
