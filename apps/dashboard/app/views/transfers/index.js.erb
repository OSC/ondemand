$('.transfers-status').html('<%=j render partial: 'transfers/transfer', collection: sort_by_created_at(@transfers), as: :transfer %>');

<% if @table_needs_reloaded %>
reloadTable();
<% end %>

// If there are running transfers, update view every second
<% if @transfers.any? {|t| ! t.status.completed? } %>
setTimeout(() => updateViewForTransfers(), 1000);
<% end %>

