<%= javascript_pack_tag 'files/filenavigator' %>
<%= label attrib.id, "#{field_options[:label]}" %>
<%= text_field :batch_connect_session_context, attrib.id, class: 'form-control' %>
<%= hidden_field_tag 'relative_root_id', files_path %>

<%=
    link_to(
    "Select Path",
    files_path,
    class: "btn btn-primary",
    data: {
        toggle: "popover",
        content: manifest_markdown('Select your project directory; defaults to your home directory on the server.'),
        html: true,
        trigger: "hover",
        title: 'Select path',
        container: "body",
    },
    target: "_blank"
    )
%>
