<% app.links.each do |link| %>
  <%=
    link_to(
      link.url.to_s,
      class: "list-group-item list-group-item-action #{"active" if local_assigns[:current_url] == link.url}",
      title: link.title,
      data: {
        'bs-toggle': "popover",
        'bs-content': manifest_markdown(link.description),
        'bs-html': true,
        'bs-trigger': "hover",
        container: "body",
      }.merge(link.data)
    ) do
  %>
    <%= icon_tag(link.icon_uri) %> <%= link.title %>
    <%- if show_owner -%>
      <small>(<%= app.owner %>)</small>
    <%- end -%>
  <% end %>
<% end %>