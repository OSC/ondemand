<ol class="breadcrumb">
  <li>
    <%= link_to "Home", root_path %>
  </li>

  <% if current_page?(action: "index") %>
  <li class="active">
    <%= products_title(@type) %>
  </li>
  <% else %>
  <li>
    <%= link_to products_title(@type), products_path(type: @type) %>
  </li>
  <%= yield %>
  <% end %>
</ol>
