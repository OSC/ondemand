  table.ajax.url(url);

  table.ajax.reload(function(data){
    $('#path-breadcrumbs').html(data.breadcrumbs_html);

    //FIXME: control coupling
    //
    // update(url, callback)
    // goto(url)
    //
    if(pushState){
      history.pushState({
        currentDirectory: data.path,
        currentDirectoryUrl: data.url
      }, data.name, data.url)
    }
  });
}

