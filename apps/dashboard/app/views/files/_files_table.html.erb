<div class="col-md-9">
  <%# TODO put search box ABOVE the breadcrumbs %>
  <div class='mt-3'>

    <ol id="path-breadcrumbs" class="breadcrumb breadcrumb-no-delimiter">
      <%= render partial: 'breadcrumb', collection: @path.descend, as: :file, locals: { file_count: @path.descend.count, full_path: @path } %>
    </ol>

    <table class="table table-striped table-condensed w-100" id="directory-contents">
      <thead>
        <tr>
          <th>
             <input type="checkbox" id="select-all" title="Select All"></input>
          </th>
          <th>Type</th>
          <th>Name</th>
          <th><span class="sr-only">Actions</span></th>
          <th>Size</th>
          <th>Modified at</th>
          <th>Owner</th>
          <th>Mode</th>
        </tr>
      </thead>
      <tbody>
      </tbody>
    </table>
  </div>
</div>

</div>
